{
    "name": "gitlogger",
    "displayName": "GitLogger",
    "description": "Passively track and document your Git commits",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "SCM Providers"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Code Tracking",
            "properties": {
                "codeTracking.commitInterval": {
                    "type": "number",
                    "default": 15,
                    "description": "The interval in minutes for automatically saving commits."
                }
            }
        },
        "commands": [
            {
                "command": "extension.LogCommit",
                "category": "GitLogger",
                "title": "Save Commit"
            },
            {
                "command": "extension.ChangeInterval",
                "category": "GitLogger",
                "title": "Change Commit Interval"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test": "eslint src && vscode-test"
    },
    "keywords": [
        "git",
        "commit",
        "logging",
        "git automation"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/<your-username>/gitlogger.git"
    },
    "bugs": {
        "url": "https://github.com/<your-username>/gitlogger/issues"
    },
    "devDependencies": {
        "@types/vscode": "^1.96.0",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "eslint": "^9.16.0",
        "typescript": "^5.7.2",
        "ts-loader": "^9.5.1",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4",
        "@vscode/test-electron": "^2.4.1"
    }
}
